<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".studyFragment.PerfectTenseFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/colorGradStart"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/definition"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:justificationMode="inter_word"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Das Perfekt drückt eine abgeschlossene Handlung in der Vergangenheit aus. In der Umgangssprache wird häufig das Perfekt anstatt das Präterium verwendet"
            android:textSize="24sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/colorGradStart"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/verwendung"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="- abgeschlossene Handlung in der Vergangenheit (Die Konsequenz einer Handlung steht im Vordergrund)"
            android:textSize="16sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingStart="30dp"
            android:paddingEnd="23dp"
            android:text="=> Gestern habe ich meinen Schreibtisch aufgeräumt (Konsequenz: Der Schreibttisch ist wieder aufgeräumt)."
            android:textSize="16sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/colorGradStart"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/bildung"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="italic" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_gradient">

            <TableRow android:background="@color/colorAppBar">

                <TextView
                    android:padding="3dip"
                    android:text="Person"
                    android:textAlignment="textStart"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:padding="3dip"
                    android:text="sein"
                    android:textAlignment="textStart"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:padding="3dip"
                    android:text="haben"
                    android:textAlignment="textStart"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </TableRow>

            <TableRow>

                <TextView
                    android:padding="3dip"
                    android:text="1.Pers. Sg."
                    android:textAlignment="textStart"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:padding="3dip"
                    android:text="ich bin gegangen"
                    android:textAlignment="textEnd"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:padding="3dip"
                    android:text="ich habe gespielt"
                    android:textAlignment="textEnd"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:padding="3dip"
                    android:text="2.Pers. Sg."
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:padding="3dip"
                    android:text="du bist gegangen"
                    android:textAlignment="textEnd"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:padding="3dip"
                    android:text="du hast gespielt"
                    android:textAlignment="textEnd"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </TableRow>

            <TableRow>

                <TextView
                    android:padding="3dip"
                    android:text="3.Pers. Sg."
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:padding="3dip"
                    android:text="er/sie/es ist gegangen"
                    android:textAlignment="textEnd"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:padding="3dip"
                    android:text="er/sie/es hat gespielt"
                    android:textAlignment="textEnd"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </TableRow>

            <TableRow>

                <TextView
                    android:padding="3dip"
                    android:text="1.Pers. Pl."
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:padding="3dip"
                    android:text="wir sind gegangen"
                    android:textAlignment="textEnd"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:padding="3dip"
                    android:text="wir haben gespielt"
                    android:textAlignment="textEnd"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </TableRow>

            <TableRow>

                <TextView
                    android:padding="3dip"
                    android:text="2.Pers. Pl."
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:padding="3dip"
                    android:text="ihr seid gegangen"
                    android:textAlignment="textEnd"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:padding="3dip"
                    android:text="ihr habt gespielt"
                    android:textAlignment="textEnd"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:padding="3dip"
                    android:text="3.Pers. Pl."
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:padding="3dip"
                    android:text="sie/Sie sind gegangen"
                    android:textAlignment="textEnd"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:padding="3dip"
                    android:text="sie/Sie haben gespielt"
                    android:textAlignment="textEnd"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </TableRow>


        </TableLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/colorGradStart"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Wichtige Merkmale"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Manche starken Verben verändern ihren Stamm im Partizip II"
            android:textSize="16sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingStart="30dp"
            android:paddingEnd="23dp"
            android:text="=> gehen - gegangen, bringen - gebracht"
            android:textSize="16sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Endet der Wortstamm auf d/t wir bei schwachen Verben ein -et angehängt"
            android:textSize="16sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingStart="30dp"
            android:paddingEnd="23dp"
            android:text="=> Beispiel: warten - gewartet"
            android:textSize="16sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Hinter trennbaren Verben steht ein ge vor dem Präfix"
            android:textSize="16sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingStart="30dp"
            android:paddingEnd="23dp"
            android:text="=> aufheben - aufgehoben"
            android:textSize="16sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Nicht trennbare Verben bilden das Partizip II ohne ge"
            android:textSize="16sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingStart="30dp"
            android:paddingEnd="23dp"
            android:text="=> studieren - studiert"
            android:textSize="16sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Verben, die auf ieren enden bilden das Partizip II ohne ge"
            android:textSize="16sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingStart="30dp"
            android:paddingEnd="23dp"
            android:text="=> studieren - studiert"
            android:textSize="16sp"
            android:textStyle="italic" />

    </LinearLayout>

</ScrollView>